<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="An example of C# .NET & Entity Framework">
    <title>@ViewBag.Title - C# Final Project</title>
    <meta name="theme-color" content="#b5bac0">

    <!-- Polyfills -->
    <script src="https://polyfill.io/v3/polyfill.min.js?features=fetch%2CElement.prototype.closest"></script>

    <!-- Stylesheets -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">

        <header class="jumbotron mb-0">
            <div class="container">
                <h1>
                    @Html.ActionLink("C# Final Project", "Index", "Home", new { area = "" }, new { @class = "" })
                </h1>
                <p class="lead">An example of C# .NET & Entity Framework</p>
            </div>
        </header>

        <nav class="header navbar navbar-expand-sm navbar-light">
            <div class="container">
                <span class="navbar-brand mr-4">Menu</span>
                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link @ViewData["HomeIsActive"]" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewData["AboutIsActive"]" href="@Url.Action("Index", "About")">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewData["ContactIsActive"]" href="@Url.Action("Index", "Contact")">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewData["DataIsActive"]" href="@Url.Action("Index", "Data")">Data</a>
                        </li>
                    </ul>
                    <hr class=".d-none .d-sm-block .d-md-none">
                    <ul class="navbar-nav"></ul>
                </div>
            </div>
        </nav>

        <main class="container pt-4 pb-4">
            @RenderBody()
        </main>

    </div>

    <footer>
        <div class="container">
            <p>
                &copy;&nbsp;Jason&nbsp;Allen&nbsp;2019 |
                Content&nbsp;Rights&nbsp;Reserved |
                <a href="sitemap.php">Sitemap</a>
            </p>
        </div>
    </footer>

    <!-- <script src="scripts/script.js"></script> -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
